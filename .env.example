# Application Settings
APP_NAME=key-face-frame
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database Configuration
DATABASE_URL=sqlite:///./key_face_frame.db
# PostgreSQL example:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/key_face_frame

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600

# Video Processing Settings
MAX_VIDEO_SIZE_MB=500
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv
OUTPUT_DIR=./output
KEYFRAME_OUTPUT_FORMAT=jpg
KEYFRAME_QUALITY=95

# YOLOv8 Model Configuration
YOLO_MODEL=yolov8n-face.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_DEVICE=mps  # Options: cpu, cuda, mps (Apple Silicon)

# Face Detection Settings
MIN_FACE_SIZE=30
MAX_FACES_PER_FRAME=10

# Keyframe Extraction Settings
MIN_FRAMES_BETWEEN_KEYFRAMES=30
SIMILARITY_THRESHOLD=0.85
MAX_KEYFRAMES_PER_VIDEO=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text
LOG_FILE=./logs/app.log

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ENABLED=true

# File Upload
MAX_UPLOAD_SIZE_MB=500
UPLOAD_DIR=./uploads

# Performance
MAX_WORKERS=4
BATCH_SIZE=32

# ==============================================================================
# Testing Configuration
# ==============================================================================

# 测试视频文件配置
# 用于自动化测试（集成测试、E2E 测试、API 测试）
# 路径配置：
#   - 相对路径（相对于项目根目录）：my_video.mp4
#   - 绝对路径：/path/to/your/video.mp4
#   - 不设置则使用默认值
#
# 示例：
# TEST_VIDEO_FILE=WanAnimate_00001_p84-audio_gouns_1765004610.mp4
# TEST_VIDEO_FILE=tests/fixtures/test_video.mp4
# TEST_VIDEO_FILE=/Users/yourname/Videos/test_video.mp4
